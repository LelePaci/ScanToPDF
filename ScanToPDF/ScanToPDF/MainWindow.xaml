<Window x:Class="ScanToPDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScanToPDF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
        <Label x:Name="console" Content="Label" HorizontalAlignment="Left" Margin="483,340,0,0" VerticalAlignment="Top" Height="69" Width="299"/>
        <ComboBox x:Name="cmbScanners" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="251" FontSize="15" SelectionChanged="cmbScanners_SelectionChanged"/>
        <Button x:Name="btnScan" Content="Scan" HorizontalAlignment="Left" Margin="140,100,0,0" VerticalAlignment="Top" Width="136" Height="36" Click="btnScan_Click"/>

    </Grid>
</Window>
